<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_tv_head">
        <item name="android:textSize">@dimen/tv_hd_size</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:padding">@dimen/tv_hd_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/tv_hd_padding</item>
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="style_et">
        <item name="android:textSize">@dimen/tv_hd_size</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">@dimen/tv_hd_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/tv_hd_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="style_button">
        <item name="android:textSize">@dimen/tv_hd_size</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:padding">@dimen/tv_hd_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/tv_hd_padding</item>
        <item name="android:textColor">@color/cyan</item>
    </style>

</resources>
