<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yamini.training.ActivityLogin">


    <TextView
        style="@style/style_tv_head"
        android:text="Welcome to My First App"
        />
    <EditText
        android:id="@+id/id_et_unm"
        style="@style/style_et"
        android:hint="User Name "
        />
    <EditText
        android:id="@+id/id_et_pwd"
        style="@style/style_et"
        android:hint="pass word "
        android:inputType="textPassword"
        />
    <Button

        style="@style/style_button"
        android:text="@string/txt_login"
android:id="@+id/id_btn_login"
        />

    <Button

        style="@style/style_button"
        android:text="Reset"
        android:id="@+id/id_btn_reset"
        />

    <Button

        style="@style/style_button"
        android:text="Signup"
        android:id="@+id/id_btn_show_signup"
        />

</LinearLayout>
